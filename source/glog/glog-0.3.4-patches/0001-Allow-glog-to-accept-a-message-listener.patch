@@ -1095,6 +1103,10 @@ class GOOGLE_GLOG_DLL_DECL LogStreamBuf : public std::streambuf {
   // Legacy public ostrstream method.
   size_t pcount() const { return pptr() - pbase(); }
   char* pbase() const { return std::streambuf::pbase(); }
