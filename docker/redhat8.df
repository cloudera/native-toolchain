FROM centos:8.2.2004

COPY ./redhat/CentOS-8.2.2004-Base.repo /etc/yum.repos.d/CentOS-Base.repo
COPY ./redhat/CentOS-8.2.2004-Extras.repo /etc/yum.repos.d/CentOS-Extras.repo
COPY ./redhat/CentOS-8.2.2004-AppStream.repo /etc/yum.repos.d/CentOS-AppStream.repo
COPY ./redhat/CentOS-8.2.2004-PowerTools.repo /etc/yum.repos.d/CentOS-PowerTools.repo

RUN dnf -y install https://dl.fedoraproject.org/pub/epel/epel-release-latest-8.noarch.rpm
RUN dnf -y install autoconf \
  automake \
  annobin \
  bison \
  byacc \
  bzip2 \
  ccache\
  curl \
  cyrus-sasl \
  cyrus-sasl-gssapi \
  cyrus-sasl-devel \
  cyrus-sasl-plain \
  diffutils \
  flex \
  gcc \
  gcc-c++ \
  git \
  glibc-devel \
  java-1.8.0-openjdk-devel \
  krb5-devel \
  libevent-devel \
  libdb-devel \
  libffi-devel \
  libtool \
  lzo-devel \
  make \
  mawk \
  ncurses-devel \
  chrony \
  openssl-devel \
  pigz \
  postgresql \
  postgresql-server \
  python2-devel \
  python38-devel \
  readline-devel \
  redhat-lsb \
  rsync \
  texinfo \
  unzip \
  vim-common \
  wget \
  which \
  xz \
  zlib-devel

COPY ./all/postinstall.sh /usr/local/bin
RUN postinstall.sh

COPY ./all/assert-dependencies-present.py /usr/local/bin
# Asserts that the packages listed above were correctly installed
RUN python3 /usr/local/bin/assert-dependencies-present.py
